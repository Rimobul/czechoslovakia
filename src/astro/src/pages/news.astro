---
import Layout from '../components/Layout.astro';
---
<Layout title="Aktuality">
  <section class="page-content">
    <div class="container">
      <div class="section-header">
        <h1 class="section-title" data-translate="news.title">Aktuality</h1>
        <p class="section-subtitle" data-translate="news.subtitle">Nejnovější zprávy z našich aktivit</p>
      </div>
      <div class="news-grid">
        <article class="news-card featured">
          <img src="https://images.unsplash.com/photo-1517048676732-d65bc937f952?w=600&h=300&fit=crop" alt="Conference" class="news-image" />
          <div class="news-content">
            <span class="news-category" data-translate="news.categories.events">Akce</span>
            <h3 data-translate="news.featured.title">Úspěšná konference v Praze</h3>
            <p data-translate="news.featured.excerpt">Více než 500 účastníků diskutovalo o budoucnosti česko-slovenských vztahů</p>
            <div class="news-meta">
              <span class="news-date">28. listopadu 2024</span>
              <a href="#" class="news-link" data-translate="news.read_more">Číst více</a>
            </div>
          </div>
        </article>
        <article class="news-card">
          <div class="news-content">
            <span class="news-category" data-translate="news.categories.business">Podnikání</span>
            <h3 data-translate="news.business.title">Nové partnerství mezi firmami</h3>
            <p data-translate="news.business.excerpt">Podepsáno 15 nových smluv o spolupráci</p>
            <div class="news-meta">
              <span class="news-date">25. listopadu 2024</span>
              <a href="#" class="news-link" data-translate="news.read_more">Číst více</a>
            </div>
          </div>
        </article>
        <article class="news-card">
          <div class="news-content">
            <span class="news-category" data-translate="news.categories.culture">Kultura</span>
            <h3 data-translate="news.culture.title">Kulturní výměna pokračuje</h3>
            <p data-translate="news.culture.excerpt">Nový program pro mladé umělce</p>
            <div class="news-meta">
              <span class="news-date">22. listopadu 2024</span>
              <a href="#" class="news-link" data-translate="news.read_more">Číst více</a>
            </div>
          </div>
        </article>
      </div>
    </div>
  </section>
</Layout>
