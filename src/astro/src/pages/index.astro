---
import Layout from '../components/Layout.astro';
---
<Layout title="Nové Československo">
  <section class="page-content">
    <div class="hero">
      <div class="hero-background"></div>
      <div class="hero-content">
        <h1 class="hero-title" data-translate="home.title">Nové Československo</h1>
        <p class="hero-subtitle" data-translate="home.subtitle">Iniciativa za sjednocení Československa</p>
        <div class="hero-buttons">
          <a href="/about" class="btn-primary" data-translate="home.learn_more">Zjistit více</a>
          <a href="/contact" class="btn-secondary" data-translate="home.get_involved">Zapojit se</a>
        </div>
      </div>
    </div>
    <div class="home-features">
      <div class="container">
        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-icon">🤝</div>
            <h3 data-translate="home.features.cooperation.title">Přeshraniční spolupráce</h3>
            <p data-translate="home.features.cooperation.description">Podporujeme projekty spojující české a slovenské občany</p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">🎭</div>
            <h3 data-translate="home.features.culture.title">Kulturní dědictví</h3>
            <p data-translate="home.features.culture.description">Oslavujeme společnou historii a tradice našich národů</p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">💼</div>
            <h3 data-translate="home.features.business.title">Obchodní příležitosti</h3>
            <p data-translate="home.features.business.description">Vytváříme platformu pro podnikatelskou spolupráci</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
