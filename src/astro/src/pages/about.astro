---
import Layout from '../components/Layout.astro';
---
<Layout title="O naší iniciativě">
  <section class="page-content">
    <div class="container">
      <div class="section-header">
        <h1 class="section-title" data-translate="about.title">Vize iniciativy Nové Československo</h1>
        <p class="section-subtitle"><strong data-translate="about.subtitle">Československo neskončilo</strong></p>
      </div>
      <div class="content-grid">
        <div class="content-text">
          <p data-translate="about.opening.paragraph1">...</p>
          <p data-translate="about.opening.paragraph2">...</p>
          <h2 data-translate="about.vision.title">🎯 Krok za krokem k společnému státu</h2>
          <p data-translate="about.vision.text">...</p>
          <h2 data-translate="about.beliefs.title">💡 Čemu věříme</h2>
          <ul class="values-list">
            <li data-translate="about.beliefs.partnership">...</li>
            <li data-translate="about.beliefs.connection">...</li>
            <li data-translate="about.beliefs.initiative">...</li>
            <li data-translate="about.beliefs.discussion">...</li>
          </ul>
          <h2 data-translate="about.goals.title">🛠️ Čeho chceme docílit</h2>
          <ul class="values-list">
            <li data-translate="about.goals.community">...</li>
            <li data-translate="about.goals.events">...</li>
            <li data-translate="about.goals.support">...</li>
            <li data-translate="about.goals.politics">...</li>
          </ul>
          <p><strong data-translate="about.calltoaction">Připojte se k nám!</strong></p>
          <p><em data-translate="about.slogan">Nové Československo<br/>Lepší spolu</em></p>
        </div>
        <div class="content-image">
          <img src="https://images.unsplash.com/photo-1564594985645-4427056293b4?w=600&h=400&fit=crop" alt="Prague Castle" class="about-image" />
        </div>
      </div>
    </div>
  </section>
</Layout>
